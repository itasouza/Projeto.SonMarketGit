@model NovoSonMarket.Dto.FornecedorDto

@{
    ViewData["Title"] = "NovoFornecedor";
}


<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="#">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>Cadastro de Fornecedor</span>
                </li>
            </ul>

        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title"></h1>

        <!-- Tela de cadastro genérico-->
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-dark">
                            <i class="icon-settings font-dark"></i>
                            <span class="caption-subject bold uppercase">Cadastro de Fornecedor</span>
                        </div>
                        <div class="tools"> </div>
                    </div>

                    <div class="portlet-body form">

                        <form role="form" asp-controller="Fornecedor" asp-action="Salvar" method="post">
                            <div class="form-body">
                                <input type="hidden" asp-for="Id" value="0" />
                                <div class="form-group">
                                    <label for="nome" asp-for="Nome">Nome</label>
                                    <input type="text" asp-for="Nome" class="form-control" id="nome" placeholder="Nome do Fornecedor" />
                                    <small class="form-text text-muted"> <span class="text-danger" asp-validation-for="Nome"></span> </small>
                                </div>


                                <div class="form-group">
                                    <label for="email" asp-for="Email">Email</label>
                                    <input type="text" asp-for="Email" class="form-control" id="email" placeholder="E-mail do Fornecedor" />
                                    <small class="form-text text-muted"> <span class="text-danger" asp-validation-for="Email"></span> </small>
                                </div>

                                <div class="form-group">
                                    <label for="telefone" asp-for="Telefone">Telefone</label>
                                    <input type="text" asp-for="Telefone" class="form-control" id="telefone" placeholder="Telefone do Fornecedor" />
                                    <small class="form-text text-muted"> <span class="text-danger" asp-validation-for="Telefone"></span> </small>
                                </div>

                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn blue">Cadastrar</button>
                            </div>
                        </form>
                    </div>

                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        </div>
        <!-- fim Tela de cadastro genérico-->


    </div>
    <!-- END CONTENT BODY -->
</div>
<!-- END CONTENT -->


@section scriptgeral {
    <script>
        $(document).ready(function () {
            $('#telefone').mask('00-00000-0000');
        });
    </script>
}