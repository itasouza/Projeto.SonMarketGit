@model IEnumerable<SysSonMarket.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Listar Categorias</h2>
<hr />
<a asp-action="NovaCategoria" asp-controller="Gestao" class="btn btn-success">Criar nova categoria</a>

<hr />

@section scriptgeral
{
    <script type="Text/javascript">
        $(document).ready(function () {
            $("#categorias").DataTable();
        });
    </script>
}


<table id="categorias" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
                <td> <a class="btn btn-primary" href="/Gestao/EditarCategoria/@categoria.Id">Editar</a>  

                <form asp-controller="Categoria" asp-action="Deletar" style="display:inline;">
                    <input type="hidden" name="id" id="id" value="@categoria.Id"/>
                    <button class="btn btn-danger">Deletar</button>
                </form>
                    
            </tr>
        }

    </tbody>

</table>


