@model IEnumerable<SysSonMarket.Models.Fornecedor>


@{
    ViewData["Title"] = "ListarFornecedor";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Listar Fornecedor</h2>
<hr />
<a asp-action="NovoFornecedor" asp-controller="Gestao" class="btn btn-success">Criar novo Fornecedor</a>


<hr />

@section scriptgeral
    {
    <script type="Text/javascript">
        $(document).ready(function () {
            $("#fornecedor").DataTable();
        });
    </script>
}


<table id="fornecedor" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fornecedor in Model)
        {
        <tr>
            <td>@fornecedor.Id</td>
            <td>@fornecedor.Nome</td>
            <td>@fornecedor.Email</td>
            <td>@fornecedor.Telefone</td>
            <td>
                <a class="btn btn-primary" href="/Gestao/EditarFornecedor/@fornecedor.Id">Editar</a>

                <form asp-controller="Fornecedor" asp-action="Deletar" style="display:inline;">
                    <input type="hidden" name="id" id="id" value="@fornecedor.Id" />
                    <button class="btn btn-danger">Deletar</button>
                </form>

        </tr>
        }

    </tbody>

</table>






